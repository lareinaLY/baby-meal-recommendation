# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/baby_meals

# Application Settings
API_PREFIX=/api/v1
DEBUG=True

# LLM API Keys (Phase 2)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic Claude API (alternative to OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
LLM_MODEL=gpt-4o-mini  # Cost-effective option
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# Feature Flags
ENABLE_SMART_FEATURES=True
ENABLE_WEEKLY_PLAN=True
ENABLE_NUTRITION_ANALYSIS=True